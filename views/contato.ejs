<%- include('partials/header') %>

<main>
  <div class="titulo-bg">
    <div class="titulo container">
      <p class="titulo-paragrafo">Respostas em até 24h</p>
      <h1 class="titulo-formulario">nosso contato<span>.</span></h1>
    </div>
  </div>

  <div class="contato container">
    <section class="contato-dados" aria-label="Endereço">
      <h2 class="font-1-m cor-0">Loja Online</h2>
      <div class="contato-endereco font-2-s cor-4">
        <p>Rua Ali Perto, 35</p>
        <p>Rio de Janeiro - RJ</p>
        <p>Brasil - Terra - Vita Láctea</p>
      </div>
      <address class="contato-meios">
        <a href="mailto:contato@bikcraft.com">contato@bikcraft.com</a>
        <a href="mailto:assistencia@bikcraft.com">assistencia@bikcraft.com</a>
        <a href="tel:+552199999999">+55 21 9999-9999</a>
      </address>
      <div class="contato-redes">
        <a href="./">
          <img src="./images/instagram-p.svg" alt="Instagram">
        </a>
        <a href="./">
          <img src="./images/facebook-p.svg" alt="Facebook">
        </a>
        <a href="./">
          <img src="./images/youtube-p.svg" alt="Youtube">
        </a>
      </div>
    </section>

    <section class="contato-formulario" aria-label="Formulário">
      <form class="form" action="./enviar_contato" method="post">
        <div>
          <label for="nome">Nome</label>
          <input type="text" id="nome" name="nome" placeholder="Seu nome">
        </div>
        <div>
          <label for="telefone">Telefone</label>
          <input type="text" id="telefone" name="telefone" placeholder="(21) 9999-9999">
        </div>
        <div class="col-2">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="contato@email.com">
        </div>
        <div class="col-2">
          <label for="mensagem">Mensagem</label>
          <textarea rows="5" id="mensagem" name="mensagem" placeholder="O que você precisa?"></textarea>
        </div>
        <button class="botao col-2">Enviar Mensagem</button>
      </form>
    </section>
  </div>
</main>

  <%- include('partials/footer') %>
